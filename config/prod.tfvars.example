# Copy this file to terraform.tfvars and fill in your values
# Required variables:

# Backend configuration - must match your S3 bucket for shared state
shared_state_bucket = "YOUR_UNIQUE_PREFIX-terraform-state-shared"

# Your GitHub repository URL
github_repository_url = "https://github.com/your-username/your-repo-name"

# Optional variables (uncomment and modify as needed):

# project_name = "hogtown"
# aws_region = "us-east-1"
# shared_state_key = "hogtown/shared.tfstate"  # Usually matches default
# shared_state_region = "us-east-1"  # Usually matches aws_region
# vpc_id = ""  # Leave empty for default VPC
# enable_vpc_connector = true
# prod_branch = "main"
# auto_deploy_enabled = false  # Recommended: false for production
# prod_cpu = "0.5 vCPU"
# prod_memory = "1 GB"
# observability_enabled = true
# log_retention_days = 30
# health_check_path = "/"
# health_check_healthy_threshold = 2
# health_check_unhealthy_threshold = 5
# health_check_interval = 10
# health_check_timeout = 5