# Example configuration for shared infrastructure
# Copy this file to shared.tfvars and fill in your values
# Used with: terraform apply -var-file=../../config/shared.tfvars

# AWS Configuration
aws_profile = "your-aws-profile-name"
aws_region  = "us-east-1"

# GitHub repository URL for App Runner source connection
github_repository_url = "https://github.com/your-username/your-repo-name"

# Optional variables (uncomment and modify as needed):
# project_name = "hogtown"
# vpc_cidr = "10.0.0.0/16"

# Database configuration
# postgres_version = "17.2"
# db_instance_class = "db.t4g.micro"
# db_allocated_storage = 20
# db_max_allocated_storage = 1000
# multi_az = false
# backup_retention_period = 7
# monitoring_interval = 0
# performance_insights_enabled = false
# deletion_protection = true
# skip_final_snapshot = false

# Application secrets (optional - leave blank to use defaults)
# prosopo_site_key = ""
# prosopo_secret_key = ""
# sendinblue_api_key = ""
# default_from_email = "noreply@hogtowncatholic.org"
# allowed_hosts = ""